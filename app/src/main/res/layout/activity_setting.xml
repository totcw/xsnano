<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:layout_height="match_parent">

    <com.betterda.xsnano.view.NormalTopBar
        android:id="@+id/topbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.betterda.xsnano.view.NormalTopBar>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lv_divider"></View>
    <LinearLayout
        android:id="@+id/linear_setting_ziliao"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_weight="10"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="@dimen/textsize_little"
            android:textColor="@color/shouye_renmen_tv"
            />


        <ImageView

            android:layout_width="8dp"
            android:layout_height="15dp"

            android:background="@mipmap/jiantou" />



    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lv_divider"></View>
    <LinearLayout
        android:id="@+id/linear_setting_editpwd"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_weight="10"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/textsize_little"
            android:textColor="@color/shouye_renmen_tv"
            />


        <ImageView

            android:layout_width="8dp"
            android:layout_height="15dp"

            android:background="@mipmap/jiantou" />



    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lv_divider"></View>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lv_divider"></View>
    <LinearLayout
        android:id="@+id/linear_setting_us"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="@dimen/textsize_little"
            android:textColor="@color/shouye_renmen_tv"
            />

        <ImageView

            android:layout_width="8dp"
            android:layout_height="15dp"

            android:background="@mipmap/jiantou" />



    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lv_divider"></View>


    <Button

        android:id="@+id/btn_setting_exit"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_corner_red"
        android:layout_width="match_parent"
        android:text="退出登录"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_height="48dp" />

</LinearLayout>
