<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#00ffffff"
    android:layout_height="match_parent">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_red2">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_corner_white_gray">

            
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@mipmap/serach"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/et_pp_choseaddress"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:hint="请输入地址"
                android:textColor="@color/shouye_lv_tv"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_pp_choseaddress_delete"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@mipmap/delete"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_pp_choseaddress"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_pp_choseaddress"
        android:layout_width="match_parent"
        android:background="#7f909090"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_pp_choseaddress2"
            android:visibility="gone"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView

                android:id="@+id/rv_pp_choseaddress"
                android:background="#ffffff"
                android:overScrollMode="never"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            </android.support.v7.widget.RecyclerView>

            <com.betterda.xsnano.view.LoadingPager
                android:id="@+id/loadpager_pp_choseaddress"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            </com.betterda.xsnano.view.LoadingPager>
        </FrameLayout>



    </FrameLayout>


</LinearLayout>
