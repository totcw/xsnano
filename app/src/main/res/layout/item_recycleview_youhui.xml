<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:background="@color/bg_gray"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_item_youhui_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shouye_renmen_tv"
            android:text="优惠券名"
            android:textSize="@dimen/textsize_little"
            />

        <TextView
            android:id="@+id/tv_item_youhui_fanwei"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shouye_lv_tv"
            android:text="仅限到店里使用"
            android:textSize="@dimen/textsize_smallest"
            />
        <TextView
            android:id="@+id/tv_item_youhui_time"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shouye_lv_tv"
            android:text="2016.05.10-2016.12.113"
            android:textSize="@dimen/textsize_smallest"
            />

    </LinearLayout>
    <RelativeLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@mipmap/youhui"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_youhui_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="￥0"
                android:textSize="@dimen/textsize_largest_22sp"
                />

            <TextView
                android:id="@+id/tv_item_youhui_price"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="满0可用"
                android:textSize="@dimen/textsize_small"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
