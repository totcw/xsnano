<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.betterda.xsnano.view.NormalTopBar
        android:id="@+id/topbar_wash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.betterda.xsnano.view.NormalTopBar>
    <com.betterda.xsnano.tianjiaji.view.TwoToolBarView
        android:id="@+id/twotool_wash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.betterda.xsnano.tianjiaji.view.TwoToolBarView>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider"></View>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_xiche"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <android.support.v7.widget.RecyclerView
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv_xiche"
                >

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <com.betterda.xsnano.view.LoadingPager

            android:id="@+id/loadpager_xiche"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.betterda.xsnano.view.LoadingPager>

    </FrameLayout>


</LinearLayout>
