<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:id="@+id/linear_comfirmorder"
    android:background="@color/bg_gray"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider"></View>
    <LinearLayout
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单时间:"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/shouye_renmen_tv"
            />
        <TextView
            android:id="@+id/tv_item_orderall_time"
            android:layout_weight="10"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016-11-15 10:55:22"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/shouye_renmen_tv"
            />
        <TextView
            android:id="@+id/tv_item_orderall_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款中"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/shouye_fenlei_red"
            />
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
           android:layout_alignParentRight="true"
            android:id="@+id/tv_item_orderall_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="@dimen/textsize_smallest" />
        <TextView
            android:layout_toLeftOf="@id/tv_item_orderall_money"
            android:id="@+id/tv_item_orderall_money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付: "
            android:textColor="@color/shouye_lv_tv"
            android:textSize="@dimen/textsize_smallest" />
        <TextView
            android:layout_toLeftOf="@id/tv_item_orderall_money2"
            android:id="@+id/tv_item_orderall_amount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品"
            android:layout_marginRight="5dp"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="@dimen/textsize_smallest" />

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider"></View>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_order_delete"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_item_orderall_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:background="@drawable/shape_corner_white_gray"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="@dimen/textsize_small" />
        <TextView
            android:visibility="gone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/shape_corner_white_red"
            android:layout_toLeftOf="@id/tv_item_orderall_delete"
            android:id="@+id/tv_item_orderall_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="立即付款"
            android:textColor="@color/shouye_fenlei_red"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:visibility="gone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_item_orderall_shouhuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="立即收货"
            android:background="@drawable/shape_corner_white_gray"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="@dimen/textsize_small" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider"></View>
</LinearLayout>
