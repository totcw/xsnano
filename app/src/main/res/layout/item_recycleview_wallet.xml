<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/lv_divider"></View>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_wallet_jinbi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/myjinbi"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="12sp"
                android:textColor="@color/shouye_renmen_tv"
                />
            <TextView
                android:visibility="gone"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_item_wallet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_white_gray"
                android:text="购物送金币"
                android:textSize="10sp"
                android:textColor="@color/shouye_lv_tv"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_item_wallet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-05-16"
                android:textSize="10sp"
                android:textColor="@color/shouye_lv_tv"
                />
            <TextView
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:layout_alignRight="@id/tv_item_wallet_time"

                android:id="@+id/tv_item_wallet_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0"
                android:textSize="12sp"
                android:textColor="@color/shouye_fenlei_red"
                />

        </RelativeLayout>
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/lv_divider"></View>
</LinearLayout>
